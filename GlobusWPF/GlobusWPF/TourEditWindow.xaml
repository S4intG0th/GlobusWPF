<Window x:Class="GlobusWPF.TourEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Редактирование тура" Height="550" Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Название тура -->
        <TextBlock Text="Название тура:" Grid.Row="0" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTourName" Grid.Row="0" Grid.Column="1" 
                 Margin="0,0,0,10"/>

        <!-- Страна -->
        <TextBlock Text="Страна:" Grid.Row="1" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="txtCountry" Grid.Row="1" Grid.Column="1" 
                 Margin="0,0,0,10"/>

        <!-- Продолжительность -->
        <TextBlock Text="Продолжительность (дней):" Grid.Row="2" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="txtDuration" Grid.Row="2" Grid.Column="1" 
                 Text="1" Margin="0,0,0,10"
                 PreviewTextInput="txtDuration_PreviewTextInput"/>

        <!-- Дата начала -->
        <TextBlock Text="Дата начала:" Grid.Row="3" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpStartDate" Grid.Row="3" Grid.Column="1" 
                    SelectedDate="{x:Static sys:DateTime.Now}"
                    Margin="0,0,0,10"/>

        <!-- Базовая цена -->
        <TextBlock Text="Базовая цена (руб.):" Grid.Row="4" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="txtBasePrice" Grid.Row="4" Grid.Column="1" 
                 Text="1000" Margin="0,0,0,10"
                 PreviewTextInput="txtBasePrice_PreviewTextInput"
                 TextChanged="txtBasePrice_TextChanged"/>

        <!-- Тип автобуса -->
        <TextBlock Text="Тип автобуса:" Grid.Row="6" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbBusType" Grid.Row="6" Grid.Column="1" 
                  Margin="0,0,0,10" SelectedIndex="0">
            <ComboBoxItem Content="Микроавтобус"/>
            <ComboBoxItem Content="Автобус"/>
            <ComboBoxItem Content="Туристический автобус"/>
            <ComboBoxItem Content="Комфорт-класс"/>
            <ComboBoxItem Content="Люкс-класс"/>
        </ComboBox>

        <!-- Вместимость -->
        <TextBlock Text="Вместимость:" Grid.Row="7" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="txtCapacity" Grid.Row="7" Grid.Column="1" 
                 Text="20" Margin="0,0,0,10"
                 PreviewTextInput="txtCapacity_PreviewTextInput"/>

        <!-- Свободных мест -->
        <TextBlock Text="Свободных мест:" Grid.Row="8" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="txtFreeSeats" Grid.Row="8" Grid.Column="1" 
                 Text="20" Margin="0,0,0,10"
                 PreviewTextInput="txtFreeSeats_PreviewTextInput"/>

        <!-- Имя файла фото -->
        <TextBlock Text="Фото (имя файла):" Grid.Row="9" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal">
            <TextBox x:Name="txtPhotoFileName" Width="150" 
                     Margin="0,0,10,10"/>
            <Button Content="..." Width="30" Click="btnBrowsePhoto_Click"
                    Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Предпросмотр фото -->
        <Border Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" 
                Height="150" Margin="0,0,0,10"
                BorderBrush="Gray" BorderThickness="1"
                Background="LightGray">
            <Image x:Name="imgPreview" Stretch="Uniform"/>
        </Border>

        <!-- Комментарий -->
        <TextBlock Text="Примечание:" Grid.Row="11" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNote" Grid.Row="11" Grid.Column="1" 
                 Margin="0,0,0,10" Height="60"
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Сохранить" 
                    Width="100" Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" 
                    Width="100" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>