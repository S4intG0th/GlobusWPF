<Window x:Class="GlobusWPF.AplicationEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Редактирование заявки" Height="450" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   x:Name="lblTitle" Text="Новая заявка" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,15" HorizontalAlignment="Center"/>

        <!-- Номер заявки -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="№ заявки:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="1" 
                   x:Name="txtAplicationId" Text="Новая" 
                   FontWeight="Bold" VerticalAlignment="Center"/>

        <!-- Тур -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Тур:*" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="1" 
                  x:Name="cbTour" DisplayMemberPath="TourName"
                  Margin="0,0,0,10" Height="25"
                  SelectionChanged="cbTour_SelectionChanged"/>

        <!-- Код клиента -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Код клиента:*" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                x:Name="txtClientId" Text="1"
                Margin="0,0,0,10" Height="25"
                PreviewTextInput="txtClientId_PreviewTextInput"/>

        <!-- Дата заявки -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Дата заявки:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="4" Grid.Column="1" 
                   x:Name="dpAplicationDate" 
                   SelectedDate="{x:Static sys:DateTime.Now}"
                   Margin="0,0,0,10" Height="25"/>

        <!-- Количество человек -->
        <TextBlock Grid.Row="5" Grid.Column="0" 
                   Text="Кол-во человек:*" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" 
                x:Name="txtPeopleCount" Text="1"
                Margin="0,0,0,10" Height="25"
                PreviewTextInput="txtPeopleCount_PreviewTextInput"/>

        <!-- Статус -->
        <TextBlock Grid.Row="6" Grid.Column="0" 
                   Text="Статус:*" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="6" Grid.Column="1" 
                 x:Name="cbStatus" SelectedIndex="0"
                 Margin="0,0,0,10" Height="25">
            <ComboBoxItem Content="Новые"/>
            <ComboBoxItem Content="Подтвержденные"/>
            <ComboBoxItem Content="Отмененные"/>
            <ComboBoxItem Content="В обработке"/>
        </ComboBox>

        <!-- Общая стоимость -->
        <TextBlock Grid.Row="7" Grid.Column="0" 
                   Text="Общая стоимость:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="7" Grid.Column="1" 
                  x:Name="txtTotalPrice" Text="0" 
                  FontSize="14" FontWeight="Bold" 
                  Foreground="Green" VerticalAlignment="Center"
                  Margin="0,0,0,10"/>

        <!-- Комментарий -->
        <TextBlock Grid.Row="8" Grid.Column="0" 
                   Text="Комментарий:" VerticalAlignment="Top"/>
        <TextBox Grid.Row="8" Grid.Column="1" 
                x:Name="txtComment" Height="60"
                VerticalScrollBarVisibility="Auto" 
                TextWrapping="Wrap" AcceptsReturn="True"
                Margin="0,0,0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="9" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Сохранить" 
                   Width="100" Margin="0,0,10,0" 
                   Click="btnSave_Click" IsDefault="True"/>
            <Button x:Name="btnCancel" Content="Отмена" 
                   Width="100" Click="btnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>