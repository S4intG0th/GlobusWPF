<Window x:Class="GlobusWPF.AplicationEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заявки" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Клиент -->
        <TextBlock Text="Клиент:" Grid.Row="0" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbClient" Grid.Row="0" Grid.Column="1" 
                  DisplayMemberPath="FullName" 
                  SelectedValuePath="ClientId"
                  Margin="0,0,0,10"/>

        <!-- Тур -->
        <TextBlock Text="Тур:" Grid.Row="1" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbTour" Grid.Row="1" Grid.Column="1" 
                  DisplayMemberPath="TourName" 
                  SelectedValuePath="TourId"
                  SelectionChanged="cbTour_SelectionChanged"
                  Margin="0,0,0,10"/>

        <!-- Количество человек -->
        <TextBlock Text="Количество человек:" Grid.Row="2" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPeopleCount" Grid.Row="2" Grid.Column="1" 
                 Text="1" PreviewTextInput="NumberValidationTextBox"
                 Margin="0,0,0,10"/>

        <!-- Стоимость тура (автоматически) -->
        <TextBlock Text="Стоимость за 1 чел.:" Grid.Row="3" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBlock x:Name="txtTourPrice" Grid.Row="3" Grid.Column="1" 
                   Margin="0,0,0,10" VerticalAlignment="Center"/>

        <!-- Общая стоимость -->
        <TextBlock Text="Общая стоимость:" Grid.Row="4" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBlock x:Name="txtTotalPrice" Grid.Row="4" Grid.Column="1" 
                   FontWeight="Bold" Foreground="Green"
                   Margin="0,0,0,10" VerticalAlignment="Center"/>

        <!-- Статус -->
        <TextBlock Text="Статус:" Grid.Row="5" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbStatus" Grid.Row="5" Grid.Column="1" 
                  Margin="0,0,0,10">
            <ComboBoxItem Content="Новые"/>
            <ComboBoxItem Content="Подтвержденные"/>
            <ComboBoxItem Content="Отмененные"/>
            <ComboBoxItem Content="В обработке"/>
        </ComboBox>

        <!-- Дата заявки -->
        <TextBlock Text="Дата заявки:" Grid.Row="6" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpAplicationDate" Grid.Row="6" Grid.Column="1" 
                    Margin="0,0,0,10"/>

        <!-- Комментарий -->
        <TextBlock Text="Комментарий:" Grid.Row="7" Grid.Column="0" 
                   Margin="0,0,10,10" VerticalAlignment="Top"/>
        <TextBox x:Name="txtComment" Grid.Row="7" Grid.Column="1" 
                 AcceptsReturn="True" TextWrapping="Wrap" 
                 Height="80" VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Сохранить" 
                    Width="100" Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" 
                    Width="100" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>