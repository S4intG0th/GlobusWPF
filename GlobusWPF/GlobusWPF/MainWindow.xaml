<Window x:Class="GlobusWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GlobusWPF"
        Title="Турагентство 'Глобус'" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <!-- Добавьте ресурсы окна -->
    <Window.Resources>
        <!-- Встроенный конвертер из WPF -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Наш кастомный конвертер -->
        <local:BoolToTextDecorationConverter x:Key="BoolToStrikeConverter"/>
    </Window.Resources>

    <DockPanel>
        <!-- Меню -->
        <Menu DockPanel.Dock="Top" Foreground="White" Background="#FF505050">
            <MenuItem Header="Туры">
                <MenuItem Header="Обновить" Click="RefreshTours_Click"/>
            </MenuItem>
            <MenuItem Header="Заявки" x:Name="menuAplications" 
                     Click="MenuAplications_Click" Visibility="Collapsed"/>
            <MenuItem Header="Выход" Click="MenuExit_Click"/>
        </Menu>

        <!-- Статусная строка -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Background="#FF505050">
                <TextBlock x:Name="statusText"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Основной контент -->
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFE6F3F3" Offset="0"/>
                    <GradientStop Color="#FF59C5C7" Offset="0.5"/>
                    <GradientStop Color="#FF377D7F" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок и фильтры -->
            <Border Grid.Row="0" Background="#FF505050" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock x:Name="lblTitle" 
                              Text="Доступные туры" 
                              FontSize="24" FontWeight="Bold"
                              Foreground="White" HorizontalAlignment="Center"/>

                    <!-- Строка фильтров -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Фильтры:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <CheckBox x:Name="chkSpecialOffers" Content="Спецпредложения" 
                                 Foreground="White" Margin="0,0,15,0" Checked="FilterTours" Unchecked="FilterTours"/>

                        <CheckBox x:Name="chkFewSeats" Content="Мало мест" 
                                 Foreground="White" Margin="0,0,15,0" Checked="FilterTours" Unchecked="FilterTours"/>

                        <CheckBox x:Name="chkStartingSoon" Content="Скоро начало" 
                                 Foreground="White" Margin="0,0,15,0" Checked="FilterTours" Unchecked="FilterTours"/>

                        <Button x:Name="btnClearFilters" Content="Сбросить фильтры" 
                               Margin="30,0,0,0" Padding="10,5" Click="btnClearFilters_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Список туров в виде карточек -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                <ItemsControl x:Name="icTours">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Карточка тура -->
                            <Border Width="350" Height="500" Margin="10" 
            Background="White" CornerRadius="10"
            BorderBrush="#FF505050" BorderThickness="2">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>

                                <!-- Стили для специальных состояний -->
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <!-- Спецпредложение (скидка >15%) -->
                                            <DataTrigger Binding="{Binding IsSpecialOffer}" Value="True">
                                                <Setter Property="Background" Value="#FFD700"/>
                                            </DataTrigger>
                                            <!-- Мало мест (<10%) -->
                                            <DataTrigger Binding="{Binding IsFewSeats}" Value="True">
                                                <Setter Property="Background" Value="#FFB6C1"/>
                                            </DataTrigger>
                                            <!-- Приоритет: если оба условия, то спецпредложение важнее -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsSpecialOffer}" Value="True"/>
                                                    <Condition Binding="{Binding IsFewSeats}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="#FFD700"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="180"/>
                                        <!-- Фото -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Название -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Страна и дни -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Дата начала -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Автобус -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Места и цена -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Кнопка -->
                                    </Grid.RowDefinitions>

                                    <!-- Фото тура -->
                                    <Border Grid.Row="0" CornerRadius="5" Background="#FFE0E0E0">
                                        <Image Source="{Binding PhotoPath}" 
                       Stretch="UniformToFill" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Width" Value="330"/>
                                                    <Setter Property="Height" Value="170"/>
                                                </Style>
                                            </Image.Style>
                                        </Image>

                                        <!-- Рамка для фото по условиям -->
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="3"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSpecialOffer}" Value="True">
                                                        <Setter Property="BorderBrush" Value="DarkGoldenrod"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsFewSeats}" Value="True">
                                                        <Setter Property="BorderBrush" Value="DarkRed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- Название тура -->
                                    <TextBlock Grid.Row="1" Text="{Binding TourName}" 
                      FontSize="18" 
                      Margin="0,10,0,5" TextWrapping="Wrap"
                      HorizontalAlignment="Center"
                      Foreground="#FF333333">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <!-- Тур скоро начнется (менее 7 дней) -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsStartingSoon}" Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Foreground" Value="#FFA500"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Страна и длительность -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                       HorizontalAlignment="Center" Margin="0,5">
                                        <TextBlock Text="Страна: " FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding CountryName}" Foreground="#FF505050"/>
                                        <TextBlock Text="   |   " Foreground="#FF505050"/>
                                        <TextBlock Text="Длительность: " FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DurationDays}" Foreground="#FF505050"/>
                                        <TextBlock Text=" дней" Foreground="#FF505050"/>
                                    </StackPanel>

                                    <!-- Дата начала -->
                                    <StackPanel Grid.Row="3" Orientation="Horizontal" 
                       HorizontalAlignment="Center" Margin="0,5">
                                        <TextBlock Text="Дата начала: " FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding StartDate, StringFormat=dd.MM.yyyy}" 
                          Foreground="#FF505050"/>

                                        <!-- Бейдж "Скоро" -->
                                        <Border Margin="10,0,0,0" Background="#FFA500" 
                       CornerRadius="3" Padding="5,2"
                       Visibility="{Binding IsStartingSoon, 
                               Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="Скоро" FontSize="10" 
                              FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Тип автобуса -->
                                    <StackPanel Grid.Row="4" Orientation="Horizontal" 
                       HorizontalAlignment="Center" Margin="0,5">
                                        <TextBlock Text="Автобус: " FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding BusTypeName}" Foreground="#FF505050"/>
                                    </StackPanel>

                                    <!-- Места и стоимость -->
                                    <Grid Grid.Row="5" Margin="0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Свободные места -->
                                        <Border Grid.Column="0" Background="#FFF5F5F5" 
                       CornerRadius="5" Padding="10" Margin="5">
                                            <StackPanel>
                                                <TextBlock Text="Свободных мест" 
                                  FontSize="12" Foreground="#FF666666"
                                  HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding FreeSeats}" 
                                  FontSize="24" FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  Foreground="#FF4CAF50">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#FF4CAF50"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsFewSeats}" Value="True">
                                                                    <Setter Property="Foreground" Value="#FFD32F2F"/>
                                                                    <Setter Property="Text" 
                                                   Value="{Binding FreeSeats, StringFormat={}{0}⚠}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding FreeSeats}" Value="0">
                                                                    <Setter Property="Foreground" Value="#FF9E9E9E"/>
                                                                    <Setter Property="Text" Value="0✗"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="из {Binding Capacity}" 
                                  FontSize="10" Foreground="#FF888888"
                                  HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Стоимость -->
                                        <Border Grid.Column="1" Background="#FFF5F5F5" 
                       CornerRadius="5" Padding="10" Margin="5">
                                            <StackPanel>
                                                <TextBlock Text="Стоимость" 
                                  FontSize="12" Foreground="#FF666666"
                                  HorizontalAlignment="Center"/>

                                                <!-- Базовая цена -->
                                                <TextBlock Text="{Binding BasePrice, StringFormat=N0}" 
                                  FontSize="16" FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  TextDecorations="{Binding HasDiscount, 
                                         Converter={StaticResource BoolToStrikeConverter}}"
                                  Foreground="{Binding BasePriceColor}"/>

                                                <!-- Цена со скидкой -->
                                                <TextBlock Text="{Binding DiscountPrice, StringFormat=N0}" 
                                  FontSize="18" FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  Foreground="#FFD32F2F"
                                  Visibility="{Binding IsSpecialOffer, 
                                         Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                <!-- Размер скидки -->
                                                <Border Background="#FFD32F2F" CornerRadius="3" 
                               Padding="3,1" Margin="0,5,0,0"
                               HorizontalAlignment="Center"
                               Visibility="{Binding IsSpecialOffer, 
                                       Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding DiscountPercent, StringFormat=-#%}" 
                                      FontSize="10" FontWeight="Bold" 
                                      Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <!-- Кнопка бронирования -->
                                    <Button Grid.Row="6" Content="Забронировать" 
                   Background="#FF59C5C7" Foreground="White"
                   FontWeight="Bold" Padding="15,8" Margin="0,15,0,0"
                   BorderBrush="#FF377D7F" BorderThickness="1"
                   Click="BookTour_Click" Tag="{Binding TourId}"
                   HorizontalAlignment="Center">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding FreeSeats}" Value="0">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Background" Value="#FFCCCCCC"/>
                                                        <Setter Property="Content" Value="Нет мест"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsFewSeats}" Value="True">
                                                        <Setter Property="Background" Value="#FFB6C1"/>
                                                        <Setter Property="BorderBrush" Value="#FF8A8A"/>
                                                        <Setter Property="Content" Value="Мало мест!"/>
                                                        <Setter Property="FontWeight" Value="ExtraBold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsSpecialOffer}" Value="True">
                                                        <Setter Property="Background" Value="#FFD700"/>
                                                        <Setter Property="BorderBrush" Value="DarkGoldenrod"/>
                                                        <Setter Property="Content" Value="Спецпредложение!"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF377D7F"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>