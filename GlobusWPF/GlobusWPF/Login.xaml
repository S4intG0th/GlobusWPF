<Window x:Class="GlobusWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход - Турагентство Глобус" 
        Height="350" Width="300"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF59C5C7" Offset="1"/>
            <GradientStop Color="#FF377D7F" Offset="0"/>
        </RadialGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Globus" 
                      FontSize="40" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20" FontFamily="Segoe UI Semibold" Foreground="White" FontWeight="Bold"/>

            <TextBlock Text="Login:" Margin="0,10,0,5" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
            <TextBox x:Name="txtLogin" Height="25"/>

            <TextBlock Text="Password:" Margin="0,10,0,5" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
            <PasswordBox x:Name="txtPassword" Height="25"/>
            <Button x:Name="btnLogin" Content="Log In"
                       Width="170" Height="45"
                       Click="btnLogin_Click" Margin="0,25,0,0" FontSize="16" FontFamily="Yu Gothic UI Semibold" Foreground="White" Background="#FF616161" BorderBrush="#FF4A4A4A"/>

            <TextBlock x:Name="lblMessage" Foreground="Red" 
                      Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
    